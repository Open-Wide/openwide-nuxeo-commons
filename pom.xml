<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-features-parent</artifactId>
    <version>5.7.1</version>
  </parent>
  
  <groupId>fr.openwide.nuxeo.commons</groupId>
  <artifactId>openwide-nuxeo-commons</artifactId>
  <version>0.1.3-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <name>Open Wide : Nuxeo Commons</name>
  <description>Reusable resources for Nuxeo projects</description>
  <url>https://github.com/Open-Wide/openwide-nuxeo-commons</url>

  <scm>
    <connection>https://github.com/Open-Wide/openwide-nuxeo-commons.git</connection>
    <developerConnection>scm:git:https://github.com/Open-Wide/openwide-nuxeo-commons.git</developerConnection>
    <url>https://github.com/Open-Wide/openwide-nuxeo-commons</url>
  </scm>
  
  <licenses>
    <license>
      <name>GNU Lesser General Public License 2.1</name>
      <url>http://www.gnu.org/licenses/lgpl-2.1.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  
  <developers>
    <developer>
      <id>schambon</id>
      <name>Sylvain Chambon</name>
      <email>sylvain.chambon@openwide.fr</email>
      <organization>Open Wide</organization>
    </developer>
    <developer>
      <id>mkalam-alami</id>
      <name>Marwane Kalam-Alami</name>
      <email>marwane.kalam-alami@openwide.fr</email>
      <organization>Open Wide</organization>
    </developer>
  </developers>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <modules>
    <module>openwide-nuxeo-core/openwide-nuxeo-constants</module>
    <module>openwide-nuxeo-core/openwide-nuxeo-tests-helper</module>
    <module>openwide-nuxeo-core/openwide-nuxeo-utils</module>
    <module>openwide-nuxeo-features/openwide-nuxeo-property-sync</module>
    <module>openwide-nuxeo-features/openwide-nuxeo-generic-properties</module>
    <module>openwide-nuxeo-features/openwide-nuxeo-avatar-importer</module>
    <module>openwide-nuxeo-features/openwide-nuxeo-document-creation-script</module>
    <module>openwide-nuxeo-features/openwide-nuxeo-ecm-types-ordering</module>
  </modules>

  <dependencies>
    <!-- Common dependencies -->
    <dependency>
      <groupId>org.nuxeo.ecm.core</groupId>
      <artifactId>nuxeo-core-api</artifactId>
    </dependency>
    
    <!-- Common dependencies for tests -->
    <dependency>
      <groupId>org.nuxeo.runtime</groupId>
      <artifactId>nuxeo-runtime-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.core</groupId>
      <artifactId>nuxeo-core-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-features-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.google.inject</groupId>
      <artifactId>guice</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <dependencyManagement>
    <dependencies>
      <!-- Open Wide projects -->
      <dependency>
        <groupId>fr.openwide.nuxeo.commons</groupId>
        <artifactId>openwide-nuxeo-tests-helper</artifactId>
        <version>${project.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>fr.openwide.nuxeo.commons</groupId>
        <artifactId>openwide-nuxeo-constants</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>fr.openwide.nuxeo.commons</groupId>
        <artifactId>openwide-nuxeo-utils</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>fr.openwide.nuxeo.commons</groupId>
        <artifactId>openwide-nuxeo-property-sync</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>fr.openwide.nuxeo.commons</groupId>
        <artifactId>openwide-nuxeo-generic-properties</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>fr.openwide.nuxeo.commons</groupId>
        <artifactId>openwide-nuxeo-avatar-importer</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>fr.openwide.nuxeo.commons</groupId>
        <artifactId>openwide-nuxeo-document-creation-script</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <!-- Nuxeo repositories -->
    <repository>
      <id>nuxeo-public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>nuxeo-public-snapshots</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>OWSI-Nuxeo</id>
      <url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-nuxeo</url>
    </repository>
    <snapshotRepository>
      <id>OWSI-Nuxeo-Snapshots</id>
      <url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-nuxeo-snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <profiles>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.1</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <keyname>0F52BAFE</keyname>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <executions>
              <execution>
                <id>attach-sources</id>
                <goals>
                  <goal>jar</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <executions>
              <execution>
                <id>attach-javadocs</id>
                <goals>
                  <goal>jar</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
